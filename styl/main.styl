.cat-food
	display flex 
	justify-content center
	flex-direction column
	align-items center
	background-image url('../img/background.png')
	background-size cover
	box-sizing border-box
	h1 
		color #fff
		text-align center
		@extend .fe 
		font-size 36px
		margin-bottom 30px
@media (min-width: 1070px)
	.cat-food
		width 100vw
		height 100vh
.cat-food__list
	display flex 
	flex-wrap wrap
	justify-content center
	align-items center
.cat-food__list-item-wrap
	position relative
	box-sizing border-box
	margin-bottom 10.8vw
	
@media (min-width: 640px)
	.cat-food__list-item-wrap
		margin-left 5vw
		margin-right 5vw
		margin-bottom 8vw
@media (min-width: 720px)
	.cat-food__list-item-wrap
		margin-left 0
		margin-right 0
		margin-bottom 6.2vw
		&:nth-child(1)
			margin-right 10.5vw
@media (min-width: 1070px)
	.cat-food__list-item-wrap
		margin-right 4.16vw
		margin-bottom 0
		&:nth-last-child(1)
			margin-right 0
		&:nth-child(1)
			margin-right 4.16vw
.cat-food__list-item
	cursor pointer
	&:hover .cat-food__weight
		background-color $lightBlue
		transition 0.2s
.cat-food__body-wrap
	background-color $list-item-back
	border-radius 0 0 12px 12px
.cat-food__background
	height 440px
	width 320px
	box-sizing border-box
	display flex 
	flex-direction column
	border 4px solid $blue
	border-top none
	border-radius 0 0 12px 12px
	h2 
		@extend .fb 
		@extend .mp0
		margin-top 5px
		color $black
		text-align left
		font-size 48px
		padding-left 50px
	h3
		@extend .fb 
		@extend .mp0
		color $black
		text-align left
		font-size 24px
		padding-left 50px
		
		
.cat-food__short-descr-wrap
	display flex
	align-items flex-end
.cat-food__triangle
	width: 0;
	height: 0;
	border-style: solid;
	border-width: 0 0 43px 43px;
	border-color: transparent transparent $list-item-back transparent;
	position relative
	&:before
		position absolute
		left -22px
		top -8px
		content ''
		width 4px
		height 62px
		background-color $blue
		transform rotate(45deg)
		
		
.cat-food__short-descr
.cat-food__short-question
	@extend .fr 
	@extend .mp0
	color $gray
	text-align left
	font-size 16px
	padding-left 10px
	width 277px
	height 43px
	border-radius 0 12px 0 0
	border 4px solid $blue
	border-left none
	border-bottom none
	box-sizing border-box
	background-color $list-item-back
	align-items flex-end
	display flex 
.cat-food__short-question
	color $pink
.cat-food__description
	margin-top 20px
	display flex 
	padding-left 50px
	p 
		font-size 14px
		@extend .mp0
		color $gray
		text-align left
		margin-right 7px
.cat-food__client
	font-size 14px
	@extend .mp0
	color $gray
	text-align left
	padding-left 50px
.cat-food__weight-contaniner
	margin-top auto
	display flex
	justify-content space-between
.cat-food__kilograms
	font-size 39px
.cat-food__weight
	width 80px
	height 80px
	border-radius 50%
	background-color $blue
	margin 11px
	display flex
	flex-direction column
	align-items center
	justify-content center
	@extend .fr 
	font-size 21px
	color $white
.sales-text
	text-align center
	@extend .fr 
	font-size 13px
	color $white
.sales-text__sales-link
	color $blue
	cursor pointer
	border-bottom 1px dashed $blue
	&:hover
		color $lightBlue
		transition 0.2s
.sales-text__out-of 
	color $yellow
.display-none
	display none
// покупаемый
.cat-food__list	
	.buyed
		.cat-food__short-descr-wrap
			.cat-food__triangle
				&:before
					background-color $pink
			.cat-food__short-descr 
				border-color $pink
			.cat-food__short-question
				border-color $pink
		.cat-food__body-wrap
			.cat-food__background
				border-color $pink
				.cat-food__weight-contaniner
					.cat-food__weight
						background-color $pink


// неактивный элемент
.cat-food__list	
	.disabled
		cursor not-allowed;
		.cat-food__short-descr-wrap
			.cat-food__triangle
				&:before
					background-color $disabled
			.cat-food__short-descr 
				color $disabled-text
				border-color $disabled
		.cat-food__body-wrap
			.cat-food__background
				opacity 0.5
				border-color $disabled
				h2
					color $disabled-text
				.cat-food__taste
					color $disabled-text
				.cat-food__description
					p 
						color $disabled-text
				.cat-food__client
					color $disabled-text
				.cat-food__weight-contaniner
					.cat-food__weight
						background-color $disabled
		
